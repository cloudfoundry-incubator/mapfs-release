---
name: mapfs

templates:
  install.erb: bin/pre-start
  mapfs-init.erb: bin/mapfs-init

packages:
- mapfs
- mapfs-fuse

provides:
- name: mapfs
  type: mapfs
  properties:
  - path
  - init-path

properties:
  path:
    description: "Path to mapfs binary"
    default: /var/vcap/packages/mapfs/bin/mapfs
  init-path:
    description: "Path to mapfs-init script"
    default: /var/vcap/jobs/mapfs/bin/mapfs-init
